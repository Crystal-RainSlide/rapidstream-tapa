load("//bazel:tapa_rules.bzl", "tapa_xo")

sh_test(
    name = "stream-vadd",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location stream-vadd-host)"],
    data = [":stream-vadd-host"],
    env = {"TAPA_CONCURRENCY": "1"},
)

sh_test(
    name = "stream-vadd-xosim",
    size = "enormous",
    timeout = "moderate",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location stream-vadd-host)",
        "--bitstream=$(location vadd-xo)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
    ],
    data = [
        ":stream-vadd-host",
        ":vadd-xo",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    tags = [
        "cpu:3",
        "manual",  # TODO: re-enable after deflaking
    ],
)

tapa_xo(
    name = "vadd-xo",
    src = "vadd.cpp",
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    top_name = "VecAdd",
)

cc_binary(
    name = "stream-vadd-host",
    srcs = glob([
        "*.cpp",
        "*.h",
    ]),
    deps = [
        "//tapa-lib:tapa",
        "@gflags",
        "@vitis_hls//:include",
    ],
)
